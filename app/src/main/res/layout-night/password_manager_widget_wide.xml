<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.PasswordManager.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PasswordManager.AppWidgetContainer"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/widget_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/empty_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/night_primary_variant"
            android:text="@string/emptywidget_text"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Widget name"
            android:background="@drawable/widget_name_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/credentials_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Stored credentials: "
            android:textColor="@color/light_blue_200"
            android:textSize="15sp"
            android:padding="8dp"
            />

    </LinearLayout>

</LinearLayout>
